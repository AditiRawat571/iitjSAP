<html>
    <head>
        <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="css/buy-sell.css" rel="stylesheet">
    </head>
    <body>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="index">IITJ SAP PORTAL</a>
              
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="mynavbar">
                
                <h1>Welcome Back <%= details.fname %> <%= details.lname %>!!</h1>
              </div>
            </div>
          </nav>
          
            <div class="row mt-2">
              
              <div class="col">
                
                <form action="/buy" class="was-validated" method="post"><div class="card mx-2" style="width:350px">
                  
                  <div class="card-body">
                    <h4 class="card-title">BUY</h4>
                    <div class="row">
                  <div class="col"><div class="dropdown">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                      Select Item
                    </button>
                    <ul class="dropdown-menu">
                      <li><div class="form-check">
                        <input type="radio" class="form-check-input" id="radio1" name="item" value="Cycle" checked>Cycle
                        <label class="form-check-label" for="radio1"></label>
                      </div></li>
                      <li><div class="form-check">
                        <input type="radio" class="form-check-input" id="radio1" name="item" value="Bucket" checked>Bucket
                        <label class="form-check-label" for="radio1"></label>
                      </div></li>
                      <li><div class="form-check">
                        <input type="radio" class="form-check-input" id="radio1" name="item" value="Clothes" checked>Clothes
                        <label class="form-check-label" for="radio1"></label>
                      </div></li>
                    </ul>
                  </div>
                  </div>
                  <div class="col"><button type="submit" class="btn btn-primary">Submit</button></div>
                </div>
                    
                    
                  </div>
                </div>
              </form></div>
              
              <div class="col">
                <form action="/buy-sell" class="was-validated" method="post">
                <div class="card mx-2" style="width:350px">
                  
                  <div class="card-body">
                    <h4 class="card-title">SELL</h4>
                    <div class="row">
                      <div class="col"><div class="mb-3 mt-3">
                        <label for="fname" class="form-label">Firstname:</label>
                        <input type="text" class="form-control" id="fname" placeholder="Enter First Name" name="fname" required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                      </div></div>
                      <div class="col"><div class="mb-3 mt-3">
                        <label for="lname" class="form-label">Lastname:</label>
                        <input type="text" class="form-control" id="lname" placeholder="Enter Last Name" name="lname" required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                      </div></div>
                      
                    </div>
                    
                      <div class="mb-3 mt-3">
                          <label for="email" class="form-label">Email:</label>
                          <input type="email" class="form-control" id="email" placeholder="Email" name="email" required>
                          <div class="valid-feedback">Valid.</div>
                          <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                      
  
                 
                  
                  <div class="dropdown">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                      Select Item
                    </button>
                    <ul class="dropdown-menu">
                      <li><div class="form-check">
                        <input type="radio" class="form-check-input" id="radio1" name="item" value="Cycle" checked>Cycle
                        <label class="form-check-label" for="radio1"></label>
                      </div></li>
                      <li><div class="form-check">
                        <input type="radio" class="form-check-input" id="radio1" name="item" value="Bucket" checked>Bucket
                        <label class="form-check-label" for="radio1"></label>
                      </div></li>
                      <li><div class="form-check">
                        <input type="radio" class="form-check-input" id="radio1" name="item" value="Clothes" checked>Clothes
                        <label class="form-check-label" for="radio1"></label>
                      </div></li>
                    </ul>
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="link" class="form-label">Image of the item:</label>
                    <input type="text" class="form-control" id="link" placeholder="Enter Drive link" name="link" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="price" class="form-label">Price:</label>
                    <input type="text" class="form-control" id="price" placeholder="Enter Price" name="price" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                  </div>
                  
                  <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </div>
              </form>
            </div>
            </div>
            
  

          
          
          
    </body>
</html>